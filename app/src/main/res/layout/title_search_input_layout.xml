<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBack"
        android:paddingStart="@dimen/padding_left"
        android:paddingLeft="@dimen/padding_left"
        android:paddingEnd="@dimen/padding_right"
        android:paddingRight="@dimen/padding_right"
        android:src="@drawable/ic_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/padding_right"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_search_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/padding_left"
            android:layout_marginLeft="@dimen/padding_left"
            android:src="@drawable/ic_home_search" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入关键字进行搜索"
            android:imeActionLabel="搜索"
            android:imeOptions="actionSearch"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/text_1"
            tools:ignore="Autofill,TextFields" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="@dimen/padding_right"
            android:layout_marginRight="@dimen/padding_right"
            android:padding="3dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>